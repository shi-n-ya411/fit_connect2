<h1>投稿一覧</h1>

<%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <p><%= truncate(post.content, length: 100) %></p>
      <p>投稿者: <%= post.user.name %></p>
      <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </li>
  <% end %>
</ul>
