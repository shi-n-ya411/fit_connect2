<div class="mypage-container">
  <h1 class="text-center my-4"><%= @user.name %> さんのマイページ</h1>

  <div class="container">
    <div class="row">
      <!-- 左カラム -->
      <div class="col-md-3">
        <div class="card my-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-center">
              こんにちは、<%= @user.name %> さん！
            </h5>
            <p class="card-text text-muted mt-3">
              自己紹介: <%= @user.introduction.presence || "自己紹介が登録されていません。" %>
            </p>
          </div>
        </div>
    
        <div class="profile text-center">
          <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image.variant(resize_to_fill: [150, 150]), class: "rounded-circle border" %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "rounded-circle border", alt: "No Profile Image" %>
          <% end %>
        </div>

        <div class="text-center mt-4">
          <%= link_to 'プロフィールを編集', edit_user_registration_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

      <!-- 右カラム -->
      <div class="col-md-9">
        <div class="right-column">
          <h2>投稿一覧</h2>

          <div class="text-end mb-3">
            <%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>
          </div>

          <ul class="post-list">
            <% @posts.each do |post| %>
              <li class="post-item mb-4 p-3 border rounded">
                <h4 class="post-title">
                  <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %>
                </h4>
                <p class="post-content">
                  <%= truncate(post.content, length: 100) %>
                </p>
                <p class="post-author text-muted">
                  投稿者: <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none text-primary" %>
                </p>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
